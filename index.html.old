        .prose pre code { background: transparent; padding: 0; color: #ccc; }
        .prose ul { list-style-type: disc; padding-left: 1.5rem; margin-bottom: 1rem; }
        .prose ol { list-style-type: decimal; padding-left: 1.5rem; margin-bottom: 1rem; }
        .prose li { margin-bottom: 0.3rem; line-height: 1.5; }
        .prose blockquote { border-left: 3px solid var(--accent); padding-left: 1rem; margin: 1rem 0; color: #999; }
        .prose a { color: var(--accent); text-decoration: underline; }
        .prose strong { color: var(--accent); font-weight: 600; }
